@model IEnumerable<MVCPractice.Models.Category >
<div class="container">
   <div class="row">
       <div class="col-6">Category List</div>
       <div class="col-6">
           <a class="btn btn-info" asp-action="Create" asp-controller="Category">Add Category</a>
       </div>
       
    </div>
    <br/>
    @if(Model.Count()>0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                {
                            <tr>
                    <td width="50%">@obj.Id</td>
                    <td width="50%>">@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                                </tr>
                }
                    </tbody>
                </table>
            }
</div>