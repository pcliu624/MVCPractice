@model IEnumerable<MVCPractice.Models.Order>

<div class="container">
    <div class="row">
        <div class="col-6"> list</div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Order">Add </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Memo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Id</td>
                        <td width="30%">@obj.ApplicationUser.FullName</td>
                        <td width="30%">@obj.Memo</td>
                        
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@obj.Id" asp-controller="Order" class="btn btn-primary">Details</a>
                                <a asp-action="Edit" asp-route-id="@obj.Id" asp-controller="Order" class="btn btn-info">Edit</a>
                                
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Empty</p>
    }


</div>