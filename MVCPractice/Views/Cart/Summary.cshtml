@model MVCPractice.Models.ViewModel.ProductUserVM

<form method="post">
   
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Inquiry</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser.FullName" type="text" class="form-control" />
                                    <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <input asp-for="ApplicationUser.PhoneNumber" type="text" class="form-control" />
                                    <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row my-1">
                                <div class="col-3">Memo</div>
                                <div class="col-9">
                                    <input asp-for="Memo" type="text" class="form-control" />
                                    <span asp-validation-for="Memo" class="text-danger"></span>
                                </div>
                            </div>



                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                
                                @for (int i = 0; i < Model.ProductList.Count(); i++)
                                {
                                   
                                    <input type="hidden" asp-for="@Model.ProductList[i].Id" />
                                    <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                <small class="text-muted">Price :$@Model.ProductList[i].Price</small>
                                             
                                                <small class="text-black-50">Total :$  @{ Model.Total += Model.ProductList[i].Price;}</small> 
                                                
                                            </div>
                                        </div>
                                    </li>
                                }
                                </ul>
                            <br />
                        </div>
                        @*<div class="container">
                            <div class="row">
                                <div class="col-4">
                                    <h3 class="text-black-50">Total : @Model.OrderDetails.Total</h3>
                                </div>
                            </div>
                        </div>*@
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-4">
                                    <button type="submit" class=" btn btn-success form-control">Check out</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
