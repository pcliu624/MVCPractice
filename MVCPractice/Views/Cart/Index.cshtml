@model IEnumerable<Product>

<form method="post">
    <br />
    <div class="border border-white">
        <div class="container row">
            <div class="col-12">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            Shopping cart
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-success btn-sm">Back</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-none d-lg-block">
                        <div class="row">
                           
                           
                            <div class="col-3 offset-3">
                                Product Details
                            </div>
                            <div class="col-2 offset-2">
                                Price
                            </div>
                           
                        </div>
                        </div>
                        <hr/>
                        @foreach(var obj in Model)
            {
                <div class="row h-100">
                    <div class="col-4 text-center py-2">
                        <img src="~/img/demo.jpg" class="rounded" width="100%" />
                    </div>
                    <div class="col-4">
                        <h5>@obj.Name</h5>
                    </div>
                    <div class="col-2" style="font-size:11px;">
                        <span style="font-size:17px;">$@obj.Price</span>

                    </div>
                    <div class="col-2 text-center">
                        <a asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-outline-danger w-75">Remove item</a>
                    </div>
                </div>

            }
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-success form-control">
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</form>